@model appPedidos.Models.Order

@{
    ViewData["Title"] = "Crear Pedido";
    var userRole = Context.Session.GetString("UserRole");
}

<h2>Crear Pedido</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (userRole != "cliente")
            {
                    <div class="form-group mb-3">
                        <label asp-for="ClienteId" class="form-label"></label>
                        <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
            }
            else
            {
                    <div class="alert alert-info">
                        <i class="bi bi-person"></i> El pedido se creará a tu nombre: <b>@Context.Session.GetString("UserName")</b>
                    </div>
            }

            <button type="submit" class="btn btn-primary">Crear pedido</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}