@model appPedidos.Models.OrderItem
@{
    ViewData["Title"] = "Eliminar Producto del Pedido";
}
<h2 class="mb-4 text-center" style="color:#b10e47;"><i class="bi bi-trash"></i> Eliminar Producto del Pedido</h2>
<div class="alert alert-danger text-center">
    <strong>¿Estás segura que quieres eliminar este producto del pedido?</strong>
</div>
<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <div class="mb-2"><b>Producto:</b> @Model.Producto?.Nombre</div>
        <div class="mb-2"><b>Cantidad:</b> @Model.Cantidad</div>
        <div class="mb-2"><b>Subtotal:</b> $@Model.Subtotal.ToString("0.00")</div>
    </div>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3 w-100"><i class="bi bi-trash"></i> Eliminar</button>
    <a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Cancelar</a>
</form>