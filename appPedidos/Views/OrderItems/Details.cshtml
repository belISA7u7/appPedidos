@model appPedidos.Models.OrderItem
@{
    ViewData["Title"] = "Detalle Producto en Pedido";
}

<h2 class="mb-4 text-center" style="color:#c16ba5;"><i class="bi bi-eye"></i> Detalle del Producto en el Pedido</h2>

<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <div class="mb-2"><b>Producto:</b> @Model.Producto?.Nombre</div>
        <div class="mb-2"><b>Cantidad:</b> @Model.Cantidad</div>
        <div class="mb-2"><b>Subtotal:</b> $@Model.Subtotal.ToString("0.00")</div>
    </div>
</div>
<a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Volver al pedido</a>