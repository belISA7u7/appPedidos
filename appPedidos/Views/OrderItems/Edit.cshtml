@model appPedidos.Models.OrderItem
@{
    ViewData["Title"] = "Editar producto del pedido";
}

<h2 class="mb-4">Editar producto del pedido</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="OrderId" />
    <input type="hidden" asp-for="ProductoId" />

    <div class="mb-3">
        <label class="form-label">Producto</label>
        <input class="form-control" value="@Model.Producto?.Nombre" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" min="1" required />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Subtotal</label>
        <input class="form-control" value="@Model.Subtotal.ToString("0.00")" readonly />
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Guardar cambios
    </button>
    <a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}