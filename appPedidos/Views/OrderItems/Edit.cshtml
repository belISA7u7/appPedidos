@model appPedidos.Models.OrderItem
@{
    ViewData["Title"] = "Editar Producto del Pedido";
}

<h2 class="mb-4 text-center" style="color:#b76fdc;"><i class="bi bi-pencil"></i> Editar Producto en el Pedido</h2>

<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="ProductoId" />
            <div class="mb-3">
                <label class="form-label">Producto</label>
                <input class="form-control" value="@Model.Producto?.Nombre" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Cantidad" class="form-label"></label>
                <input asp-for="Cantidad" class="form-control" min="1" required />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save"></i> Guardar Cambios</button>
        </form>
    </div>
</div>
<a asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Volver al pedido</a>