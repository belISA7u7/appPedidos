@model IEnumerable<appPedidos.Models.OrderItem>

@{
    ViewData["Title"] = "Items de Pedido";
}

<h2>Items de Pedido</h2>

<p>
    <a asp-action="Create">Agregar nuevo item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Pedido</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.Producto?.Nombre</td>
            <td>@item.Cantidad</td>
            <td>@item.Subtotal.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>