@model appPedidos.Models.Order
@{
    ViewData["Title"] = "Nuevo Pedido";
    var userRole = Context.Session.GetString("UserRole");
}

<h2 class="mb-4">Nuevo Pedido</h2>

@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @if (userRole != "cliente")
            {
                    <div class="mb-3">
                        <label asp-for="ClienteId" class="form-label"></label>
                        <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
            }
            <!-- Fecha y estado se asignan en el controlador -->
            <button type="submit" class="btn btn-success">Crear Pedido</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}