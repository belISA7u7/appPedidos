@model appPedidos.Models.Order
@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h2 class="mb-4">Eliminar Pedido</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro que quieres eliminar este pedido?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.Cliente?.Email</dd>
            <dt class="col-sm-4">Fecha</dt>
            <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>