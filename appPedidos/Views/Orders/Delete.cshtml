@model appPedidos.Models.Order
@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h2 class="mb-4 text-center" style="color:#b10e47;"><i class="bi bi-trash"></i> Eliminar Pedido</h2>

<div class="alert alert-danger text-center">
    <strong>¿Estás segura que quieres eliminar este pedido?</strong>
</div>

<div class="card mb-3 mx-auto" style="max-width: 520px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.Cliente?.Email</dd>
            <dt class="col-sm-4">Fecha</dt>
            <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Eliminar</button>
    <a asp-action="Index" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Cancelar</a>
</form>