@model appPedidos.Models.Order
@{
    ViewData["Title"] = "Detalle del Pedido";
    var orderItems = ViewBag.OrderItems as List<appPedidos.Models.OrderItem>;
}

<h2 class="mb-4 text-center" style="color:#b76fdc;"><i class="bi bi-eye"></i> Detalle del Pedido</h2>

<div class="card mb-4 mx-auto" style="max-width: 700px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Email</dd>
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.Fecha.ToString("g")</dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9">$@Model.Total.ToString("0.00")</dd>
        </dl>
    </div>
</div>

<h4 class="mt-4"><i class="bi bi-basket2-heart"></i> Productos en el Pedido</h4>
@if (orderItems != null && orderItems.Count > 0)
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in orderItems)
            {
                    <tr>
                        <td>@item.Producto?.Nombre</td>
                        <td>@item.Cantidad</td>
                        <td>$@item.Producto?.Precio.ToString("0.00")</td>
                        <td>$@item.Subtotal.ToString("0.00")</td>
                    </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="alert alert-warning">
            No hay productos agregados a este pedido.
        </div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left"></i> Volver a la lista
</a>