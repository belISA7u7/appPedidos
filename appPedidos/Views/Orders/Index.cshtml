@model IEnumerable<appPedidos.Models.Order>
@{
    ViewData["Title"] = "Pedidos";
    var userRole = Context.Session.GetString("UserRole");
}

<h2 class="mb-4 text-center" style="color:#b76fdc;"><i class="bi bi-box2-heart"></i> Pedidos</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Pedido
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Cliente?.Email</td>
                            <td>@item.Fecha.ToString("g")</td>
                            <td>@item.Estado</td>
                            <td><span class="badge bg-info" style="font-size:1em;">$@item.Total.ToString("0.00")</span></td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>