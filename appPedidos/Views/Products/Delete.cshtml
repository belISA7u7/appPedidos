@model appPedidos.Models.Product
@{
    ViewData["Title"] = "Eliminar Producto";
}
<h2 class="mb-4 text-center" style="color:#b10e47;"><i class="bi bi-trash"></i> Eliminar Producto</h2>
<div class="alert alert-danger text-center">
    <strong>¿Estás segura que quieres eliminar este producto?</strong>
</div>
<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <h5 class="card-title" style="color:#c16ba5;">@Model.Nombre</h5>
        <p class="card-text">@Model.Descripcion</p>
        <span class="badge bg-secondary">Stock: @Model.Stock</span>
        <h6 class="card-subtitle mt-2 text-muted">Precio: <b style="color:#b76fdc;">$@Model.Precio.ToString("0.00")</b></h6>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3 w-100"><i class="bi bi-trash"></i> Eliminar</button>
    <a asp-action="Index" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Cancelar</a>
</form>