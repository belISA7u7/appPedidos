@model appPedidos.Models.Product
@{
    ViewData["Title"] = "Detalle Producto";
}
<h2 class="mb-4 text-center" style="color:#c16ba5;"><i class="bi bi-eye"></i> Detalle del Producto</h2>

<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <h5 class="card-title" style="color:#c16ba5;">@Model.Nombre</h5>
        <p class="card-text">@Model.Descripcion</p>
        <span class="badge bg-secondary">Stock: @Model.Stock</span>
        <h6 class="card-subtitle mt-2 text-muted">Precio: <b style="color:#b76fdc;">$@Model.Precio.ToString("0.00")</b></h6>
    </div>
</div>
<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
    <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
</div>