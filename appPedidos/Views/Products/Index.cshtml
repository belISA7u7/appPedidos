@model IEnumerable<appPedidos.Models.Product>
@{
    ViewData["Title"] = "Productos";
    var userRole = Context.Session.GetString("UserRole");
}

<h2 class="mb-4 text-center" style="color:#c16ba5;"><i class="bi bi-bag-heart"></i> Productos</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row mb-3">
    <div class="col">
        <form method="get" asp-action="Index" class="row g-2">
            <div class="col-auto">
                <input type="text" name="searchString" class="form-control" value="@Context.Request.Query["searchString"]" placeholder="Buscar por nombre..." />
            </div>
            <div class="col-auto">
                <input type="number" step="0.01" name="minPrice" class="form-control" value="@Context.Request.Query["minPrice"]" placeholder="Precio mínimo" />
            </div>
            <div class="col-auto">
                <input type="number" step="0.01" name="maxPrice" class="form-control" value="@Context.Request.Query["maxPrice"]" placeholder="Precio máximo" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search-heart"></i> Buscar</button>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x-lg"></i> Limpiar</a>
            </div>
        </form>
    </div>
    @if (userRole == "admin" || userRole == "empleado")
    {
            <div class="col-auto">
                <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Nuevo Producto</a>
            </div>
    }
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title" style="color:#c16ba5;">@item.Nombre</h5>
                    <p class="card-text">@item.Descripcion</p>
                    <span class="badge bg-secondary mb-2">Stock: @item.Stock</span>
                    <h6 class="card-subtitle mb-2 text-muted">Precio: <b style="color:#b76fdc;">$@item.Precio.ToString("0.00")</b></h6>
                </div>
                <div class="card-footer bg-white border-0 text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i></a>
                    @if (userRole == "admin" || userRole == "empleado")
                    {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                    }
                </div>
            </div>
        </div>
    }
</div>