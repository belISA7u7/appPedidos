@model IEnumerable<appPedidos.Models.Product>

@{
    ViewData["Title"] = "Productos";
}

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

<form method="get" asp-action="Index">
    <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Buscar por nombre..." />
    <input type="number" step="0.01" name="minPrice" value="@Context.Request.Query["minPrice"]" placeholder="Precio mínimo" />
    <input type="number" step="0.01" name="maxPrice" value="@Context.Request.Query["maxPrice"]" placeholder="Precio máximo" />
    <button type="submit">Buscar</button>
    <a asp-action="Index">Limpiar</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.Stock)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.Precio</td>
            <td>@item.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>