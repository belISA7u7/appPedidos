@model appPedidos.Models.User
@{
    ViewData["Title"] = "Detalles Usuario";
}
<h2 class="mb-4 text-center" style="color:#c16ba5;"><i class="bi bi-eye"></i> Detalles del Usuario</h2>

<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <h5 class="card-title" style="color:#c16ba5;">@Model.Nombre</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Email:</b> @Model.Email</li>
            <li class="list-group-item"><b>Rol:</b> <span class="badge bg-secondary">@Model.Rol</span></li>
        </ul>
    </div>
</div>
<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i> Editar</a>
    <a asp-action="Index" class="btn btn-link"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
</div>