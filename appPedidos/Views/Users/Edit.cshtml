@model appPedidos.Models.User
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2 class="mb-4 text-center" style="color:#b76fdc;"><i class="bi bi-pencil"></i> Editar Usuario</h2>

<div class="card mx-auto" style="max-width: 430px;">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Rol" class="form-label"></label>
                <select asp-for="Rol" class="form-select">
                    <option value="admin">Administrador</option>
                    <option value="empleado">Empleado</option>
                    <option value="cliente">Cliente</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save"></i> Guardar Cambios</button>
        </form>
    </div>
</div>
<a asp-action="Index" class="btn btn-link mt-3"><i class="bi bi-arrow-left"></i> Volver a la lista</a>