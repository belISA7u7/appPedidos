@model IEnumerable<appPedidos.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}

<h2 class="mb-4 text-center" style="color:#6c3483;"><i class="bi bi-people-fill"></i> Usuarios</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
        <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Usuario
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nombre</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-secondary">@user.Rol</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>